<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="#FAFAFA"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:background="#ddd"
            android:drawablePadding="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_face_black_24dp"
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <EditText
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"

            android:inputType="number"
            android:background="#ddd"

            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
            android:drawablePadding="5dp"
             />

        <EditText
            android:background="#DFDFDF"
            android:paddingLeft="10dp"

            android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
            android:drawablePadding="5dp"
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
             />

        <Button
            android:id="@+id/save_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMintDark"
            android:text="save"
            android:textColor="#fff" />
    </LinearLayout>

</ScrollView>
