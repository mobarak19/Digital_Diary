<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_contact"
    android:background="#FAFAFA"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        tools:context="com.cse.cou.mobarak.digital_diary.activity.AddContact">

        <ImageView

            android:background="@drawable/ic_perm_identity_black_24dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="200dp" />
        <EditText
            android:id="@+id/save_name"
            android:hint=" Enter name"
            android:paddingLeft="10dp"
            android:background="#ddd"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_face_black_24dp"
            android:layout_width="match_parent"
            android:drawablePadding="5dp"
            android:layout_height="50dp" />

        <EditText
            android:background="#ddd"
            android:paddingLeft="10dp"

            android:inputType="number"
            android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
            android:drawablePadding="5dp"
            android:id="@+id/save_phone"
            android:hint=" Enter phone"
android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:background="#ddd"
            android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
            android:drawablePadding="5dp"
            android:id="@+id/save_email"
            android:hint=" Enter email"
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/save_contact"
            android:text="save"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="16dp"
            android:textColor="#fff"
            android:background="@color/colorMintDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>

